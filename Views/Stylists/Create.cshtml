@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  <br>
  <input class="btn btn-success" type="submit" value="Add new stylist" />
}
<br><hr>
<button type="button" class="btn btn-warning" onclick="window.location.href = '/Stylists'">Back to Stylists</button>
