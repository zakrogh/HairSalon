@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h2>Stylists</h2>

@if (@Model.Count == 0)
{
  <h4>No stylists have been added yet!</h4>
}

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}

<button type="button" class="btn btn-primary" onclick="window.location.href = '/Stylists/Create'">Add New Stylist</button>
<br><hr>
<button type="button" class="btn btn-warning" onclick="window.location.href = '/'">Home</button>
