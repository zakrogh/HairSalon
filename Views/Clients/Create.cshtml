@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <br>
    <input class="btn btn-primary" type="submit" value="Add new client" class="btn btn-default" />

}
<br><hr>
<button type="button" class="btn btn-warning" onclick="window.location.href = '/Clients'">Back to Clients</button>
