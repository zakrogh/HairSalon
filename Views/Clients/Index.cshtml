@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>
}

<button type="button" class="btn btn-primary" onclick="window.location.href = '/Clients/Create'">Add New Client</button>
<br><hr>
<button type="button" class="btn btn-warning" onclick="window.location.href = '/'">Home</button>
